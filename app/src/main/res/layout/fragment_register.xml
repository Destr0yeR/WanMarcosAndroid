<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBackgroundColorLight"
    tools:context="wan.wanmarcos.fragments.RegisterFragment">

        <RelativeLayout
            android:id="@+id/main_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <ImageView
            android:id="@+id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@mipmap/wanmarcosblack"/>

            <TextView
                android:id="@+id/registerHeaderLablel"
                android:layout_below="@id/appLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/loginLinkTextColorLight"
                android:layout_centerHorizontal="true"
                android:text="@string/lblTellUsAboutYou"/>

            <EditText
                android:id="@+id/email"
                android:layout_below="@id/registerHeaderLablel"
                style="@style/FormField"
                android:hint="@string/lblRegisterEmail"
                android:background="@color/registerImportantFieldBackgroundLight"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:inputType="textEmailAddress"
                android:drawableLeft="@mipmap/ic_email_black_24dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp" />

            <EditText
                android:id="@+id/password"
                android:layout_below="@id/email"
                style="@style/FormField"
                android:hint="@string/lblRegisterPassword"
                android:inputType="textPassword"
                android:background="@color/registerImportantFieldBackgroundLight"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ic_lock_black_24dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"/>

            <EditText
                android:id="@+id/first_name"
                android:layout_below="@id/password"
                style="@style/FormField"
                android:hint="@string/lblRegisterFirstName"
                android:background="@color/loginInputFieldBackgroundColorLight"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ic_account_circle_black_24dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="25dp"
                android:drawablePadding="10dp"/>

            <EditText
                android:id="@+id/last_name"
                android:layout_below="@id/first_name"
                style="@style/FormField"
                android:hint="@string/lblRegisterLastName"
                android:background="@color/loginInputFieldBackgroundColorLight"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ic_supervisor_account_black_24dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp" />

            <Button
                android:id="@+id/signUp"
                android:layout_below="@id/last_name"
                style="@style/FormField"
                android:gravity="center"
                android:layout_height="55dp"
                android:background="@color/registerButtonBackgroundColor"
                android:textColor="@color/loginButtonTextColor"
                android:textStyle="normal"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:text="@string/btnRegisterForm" />

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </RelativeLayout>

</FrameLayout>
