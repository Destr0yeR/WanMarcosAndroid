<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginBackgroundColorLight"
    tools:context="wan.wanmarcos.fragments.RegisterFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/main_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/appLogo"

                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:src="@mipmap/wanmarcosblack"/>

            <TextView
                android:id="@+id/registerHeaderLablel"
                android:layout_below="@id/appLogo"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"

                android:textSize="20sp"
                android:textColor="@color/loginLinkTextColorLight"
                android:text="@string/lblTellUsAboutYou"/>

            <EditText
                android:id="@+id/email"
                android:layout_below="@id/registerHeaderLablel"

                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"

                android:hint="@string/lblRegisterEmail"
                android:background="@color/registerImportantFieldBackgroundLight"
                android:inputType="textEmailAddress"
                android:drawableLeft="@mipmap/ic_email_black_24dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_below="@id/email"

                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"

                android:hint="@string/lblRegisterPassword"
                android:inputType="textPassword"
                android:background="@color/registerImportantFieldBackgroundLight"
                android:drawableLeft="@mipmap/ic_lock_black_24dp"/>

            <EditText
                android:id="@+id/first_name"
                android:layout_below="@id/password"

                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"

                android:hint="@string/lblRegisterFirstName"
                android:background="@color/loginInputFieldBackgroundColorLight"

                android:drawableLeft="@mipmap/ic_account_circle_black_24dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/last_name"
                android:layout_below="@id/first_name"

                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:layout_height="50dp"

                android:hint="@string/lblRegisterLastName"
                android:background="@color/loginInputFieldBackgroundColorLight"
                android:drawableLeft="@mipmap/ic_supervisor_account_black_24dp" />

            <Button
                android:id="@+id/signUp"
                android:layout_below="@id/last_name"

                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:elevation="10dp"

                android:background="@color/registerButtonBackgroundColor"
                android:textColor="@color/loginButtonTextColor"
                android:textSize="20sp"
                android:text="@string/btnRegisterForm"/>

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </RelativeLayout>

    </ScrollView>



</FrameLayout>
