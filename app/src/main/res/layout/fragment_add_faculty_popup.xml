<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/add_faculty_header_label"

        style="@style/AddFacultyPopUpHeader"

        android:text="Dinos El Nombre De Una Facultad Que Te Interese"
        />

    <AutoCompleteTextView
        android:id="@+id/add_faculty_textView"

        style="@style/AutoCompleteTextViewForm"

        android:hint="Facultad"
        android:layout_below="@id/add_faculty_header_label"/>
    <Button
        android:id="@+id/profile_edit_info_submit"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:background="@color/accentNewsColor"
        android:textColor="@color/buttonTextNewsColor"
        android:text=" Guardar "
        android:layout_below="@id/add_faculty_textView" />

</RelativeLayout>