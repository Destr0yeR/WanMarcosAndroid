<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="180dp"
    android:background="@drawable/borders"
    android:layout_width="match_parent">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:id="@+id/teacher_image"
        style="@style/ProfileTeacherItemImage" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/sub_fragment_teacher_title"
        style="@style/ProfileTeacherItemTitle">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/sub_fragment_teacher_rating"
        style="@style/ProfileTeacherItemRatings">

    </FrameLayout>



</RelativeLayout>