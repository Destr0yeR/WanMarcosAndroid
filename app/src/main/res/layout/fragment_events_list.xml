<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wan.wanmarcos.fragments.EventViewListFragment">

    <RelativeLayout
        android:id="@+id/form_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/eventList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/newEventButton"
            android:scrollbars="vertical"
            >
        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/newEventButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:text="SugiÃ©renos un Evento"
            android:textAllCaps="true"
            android:elevation="6dp"
            android:background="@color/primaryNewsColor"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

</RelativeLayout>