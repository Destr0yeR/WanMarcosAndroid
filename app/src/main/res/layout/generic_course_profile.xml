<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="200dp"
    android:background="@drawable/borders">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        style="@style/CourseTeacherImageItem" />
    <fragment
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:id="@+id/fragment"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:name="wan.wanmarcos.fragments.SectionCourseTitle"
        tools:layout="@layout/generic_course_title" />

    <fragment
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:id="@+id/fragment2"
        android:layout_alignLeft="@+id/fragment"
        android:layout_alignStart="@+id/fragment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:name="wan.wanmarcos.fragments.SectionCourseRating"
        tools:layout="@layout/generic_list" />

</RelativeLayout>