<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="200dp"
    android:background="@drawable/borders">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        style="@style/CourseTeacherImageItem" />
    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:id="@+id/sub_fragment_course_title"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </FrameLayout>

    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:id="@+id/sub_fragment_course_rating"
        android:layout_alignLeft="@+id/sub_fragment_course_title"
        android:layout_alignStart="@+id/sub_fragment_course_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp">

    </FrameLayout>

</RelativeLayout>