<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/eventListImage"

                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@android:color/black"

                android:src="@mipmap/wm17">
            </ImageView>

            <TextView
                android:id="@+id/eventListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"

                android:text="@string/eventTitlePlaceholder"
                android:textSize="25sp"
                android:layout_below="@id/eventListImage"
                />

            <TextView
                android:id="@+id/eventListDateAndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginBottom="5dp"

                android:layout_below="@id/eventListTitle"
                android:textSize="15sp"
                android:text="@string/eventDatePlaceholder"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>