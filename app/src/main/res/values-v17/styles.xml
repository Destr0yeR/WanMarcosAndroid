                <item name="android:layout_alignLeft">@+id/teacher_description</item>
                <item name="android:layout_alignStart">@+id/teacher_description</item>
        </style>

        <style name="TeacherItemCourses">
                <item name="android:paddingRight">0dp</item>
                <item name="android:layout_below">@+id/teacher_name</item>
                <item name="android:layout_alignBaseline">@+id/textView</item>
                <item name="android:layout_alignBottom">@+id/textView</item>
