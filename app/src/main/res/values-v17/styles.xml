                <item name="android:layout_alignStart">@+id/textView</item>
                <item name="android:layout_alignRight">@+id/teacher_name</item>
                <item name="android:layout_alignEnd">@+id/teacher_name</item>
        </style>

        <style name="TeacherItemName">
                <item name="android:layout_marginTop">10dp</item>
                <item name="android:layout_marginLeft">24dp</item>
                <item name="android:layout_marginStart">24dp</item>
                <item name="android:layout_alignTop">@+id/teacher_image</item>
                <item name="android:layout_toRightOf">@+id/teacher_image</item>
                <item name="android:layout_alignParentRight">true</item>
                <item name="android:layout_alignParentEnd">true</item>
        </style>
