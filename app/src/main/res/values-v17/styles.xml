        <!--Rating Item-->
        <!--START-->
        <style name="RatingLabel" >
                <item name="android:layout_alignParentTop">true</item>
                <item name="android:layout_alignParentLeft">true</item>
                <item name="android:layout_alignParentStart">true</item>
        </style>

        <style name="RatingBar" parent="android:Widget.DeviceDefault.Light.RatingBar.Small">
                <item name="android:layout_marginLeft">10dp</item>
                <item name="android:layout_width">wrap_content</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:layout_alignParentTop">true</item>
                <item name="android:layout_toRightOf">@id/rating_type</item>
                <item name="android:numStars">5</item>
                <item name="android:layout_toEndOf">@id/rating_type</item>
                <item name="android:layout_alignBottom">@id/rating_type</item>
        </style>

        <style name="RatingMark">
                <item name="android:layout_alignParentTop">true</item>
                <item name="android:layout_alignParentRight">true</item>
                <item name="android:layout_marginLeft">10dp</item>
                <item name="android:layout_alignParentEnd">true</item>
                <item name="android:layout_alignParentTop">true</item>
                <item name="android:layout_toRightOf">@id/rating_progress</item>
                <item name="android:layout_alignBottom">@id/rating_type</item>
        </style>
