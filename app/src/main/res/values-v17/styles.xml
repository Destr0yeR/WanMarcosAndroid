        <style name="RatingItem" parent="android:Widget.DeviceDefault.Light.RatingBar.Small">

        </style>
        <!--START-->
        <!--Teacher Item-->
        <style name="TeacherItemRating" parent="android:Widget.DeviceDefault.Light.RatingBar.Small">
                <item name="android:layout_marginLeft">10dp</item>
                <item name="android:layout_marginStart">10dp</item>
                <item name="android:layout_marginBottom">15dp</item>
                <item name="android:layout_alignParentBottom">true</item>
                <item name="android:layout_alignParentLeft">true</item>
                <item name="android:layout_alignParentStart">true</item>
        </style>

        <style name="TeacherItemImage">
                <item name="android:contentDescription">@string/action_settings</item>
                <item name="android:layout_above">@+id/teacher_rating</item>
                <item name="android:layout_alignRight">@id/teacher_rating</item>
                <item name="android:layout_alignEnd">@id/teacher_rating</item>
                <item name="android:layout_alignLeft">@id/teacher_rating</item>
