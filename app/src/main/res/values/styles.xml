<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="CenterVerticalLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FormField">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryNewsColor</item>
        <item name="colorPrimaryDark">@color/primaryNewsColorDark</item>
        <item name="colorAccent">@color/accentNewsColor</item>
    </style>

    <style name="TeacherItemImage">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:contentDescription">:o</item>
    </style>

    <style name="TeacherItemName">
        <item name="android:gravity">center</item>
        <item name="android:layout_toRightOf">@+id/teacher_item_picture</item>
        <item name="android:layout_alignTop">@+id/teacher_item_picture</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TeacherItemCourses">
        <item name="android:layout_below">@+id/teacher_item_name</item>
        <item name="android:layout_toRightOf">@+id/teacher_item_picture</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TeacherItemFaculties">
        <item name="android:layout_below">@+id/teacher_item_courses</item>
        <item name="android:layout_toRightOf">@+id/teacher_item_picture</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="DividerLabelMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="DividerLineMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/eventDetailDividerColor</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarWhiteText" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="ContactanosHeaderLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="BigTextInput">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">10</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">top</item>

    </style>

    <style name="BottomRightFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NavDrawerStyle">
        <item name="android:name">wan.wanmarcos.fragments.NavigationDrawerFragment</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="CardSmallProfileImage">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerVertical">true</item>
