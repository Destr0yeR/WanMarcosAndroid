<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="CenterVerticalLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="FormField">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryNewsColor</item>
        <item name="colorPrimaryDark">@color/primaryNewsColorDark</item>
        <item name="colorAccent">@color/accentNewsColor</item>
    </style>

    <style name="TeacherItemImage">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:contentDescription">:o</item>
    </style>

    <style name="TeacherItemName">
        <item name="android:gravity">center</item>
        <item name="android:layout_toRightOf">@+id/teacher_item_picture</item>
        <item name="android:layout_alignTop">@+id/teacher_item_picture</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TeacherItemCourses">
        <item name="android:layout_below">@+id/teacher_item_name</item>
        <item name="android:layout_toRightOf">@+id/teacher_item_picture</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TeacherItemFaculties">
        <item name="android:layout_below">@+id/teacher_item_courses</item>
        <item name="android:layout_toRightOf">@+id/teacher_item_picture</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarWhiteText" parent="Theme.AppCompat.NoActionBar">
    </style>

</resources>
