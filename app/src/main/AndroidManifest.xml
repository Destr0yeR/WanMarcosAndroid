<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wan.wanmarcos" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HomeActivity"
            android:launchMode="singleTask"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".activities.TeacherActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:launchMode="singleTask"
            android:label="@string/title_activity_teacher"
            android:theme="@style/AppTheme"/>

        <activity android:name=".activities.EventsActivity"
            android:label="Eventos"
            android:windowSoftInputMode="adjustResize"/>

        <activity
            android:name=".activities.ContactanosActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/title_contactanos" >
        </activity>
    </application>

</manifest>
